1) SELECT ct.city, c.country FROM country c 
  INNER JOIN city ct ON c.country_id = ct.country_id; 
2) SELECT c.first_name, c.last_name FROM customer c
INNER JOIN payment ON customer.payment_id = payment.payment_id;
3) SELECT first_name, last_name FROM customer INNER JOIN rental ON customer.rental_id = rental.rental_id;
